{
  "name": "FinanceTransaction",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "income",
        "expense",
        "debt_payment"
      ],
      "description": "Type of transaction"
    },
    "category": {
      "type": "string",
      "description": "Transaction category"
    },
    "amount": {
      "type": "number",
      "description": "Transaction amount"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Transaction date"
    },
    "description": {
      "type": "string",
      "description": "Transaction description"
    },
    "is_planned": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is a planned transaction"
    }
  },
  "required": [
    "type",
    "amount",
    "date"
  ]
}