{
  "name": "HabitLog",
  "type": "object",
  "properties": {
    "habit_id": {
      "type": "string",
      "description": "Reference to the Habit entity"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date of the log entry"
    },
    "completed": {
      "type": "boolean",
      "default": false,
      "description": "Whether the habit was completed"
    },
    "actual_value": {
      "type": "number",
      "description": "Actual value achieved"
    },
    "mood": {
      "type": "number",
      "minimum": 1,
      "maximum": 10,
      "description": "Mood rating (1-10)"
    },
    "motivation": {
      "type": "number",
      "minimum": 1,
      "maximum": 10,
      "description": "Motivation rating (1-10)"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "habit_id",
    "date",
    "completed"
  ]
}