{
  "name": "VisionBoardItem",
  "type": "object",
  "properties": {
    "board_id": {
      "type": "string",
      "description": "Reference to VisionBoard"
    },
    "type": {
      "type": "string",
      "enum": [
        "image",
        "text",
        "goal",
        "affirmation",
        "shape",
        "sticker"
      ],
      "description": "Item type"
    },
    "content": {
      "type": "string",
      "description": "Text content or image URL"
    },
    "x": {
      "type": "number",
      "default": 0,
      "description": "X position"
    },
    "y": {
      "type": "number",
      "default": 0,
      "description": "Y position"
    },
    "width": {
      "type": "number",
      "default": 200
    },
    "height": {
      "type": "number",
      "default": 200
    },
    "rotation": {
      "type": "number",
      "default": 0
    },
    "z_index": {
      "type": "number",
      "default": 1
    },
    "style": {
      "type": "object",
      "description": "Style properties like font, color, etc."
    },
    "linked_goal_id": {
