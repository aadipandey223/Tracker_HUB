{
  "name": "Task",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Task title"
    },
    "description": {
      "type": "string",
      "description": "Task description"
    },
    "due_date": {
      "type": "string",
      "format": "date",
      "description": "Due date for the task"
    },
    "priority": {
      "type": "string",
      "enum": [
        "High",
        "Medium",
        "Low",
        "Optional"
      ],
      "default": "Medium",
      "description": "Task priority"
    },
    "status": {
      "type": "string",
      "enum": [
        "Not Started",
        "In Progress",
        "Done",
        "Canceled"
      ],
      "default": "Not Started",
      "description": "Current status of the task"
    },
    "category": {
      "type": "string",
      "description": "Task category"
    },
    "is_recurring": {
      "type": "boolean",
      "default": false,
      "description": "Whether the task is recurring"
    },
    "recurrence_pattern": {
      "type": "string",
      "description": "Pattern for recurring tasks"
    }
  },
  "required": [
    "title",
    "due_date"
  ]
}